<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.qidewang.dao.StudentDao">

    <insert id="addStudent" parameterType="cn.qidewang.doMain.Student">
        INSERT INTO student(id,name,age,sex,phone_number,score,update_time,id_number) VALUES(#{id},#{name},#{age},#{sex},#{number},#{score},now(),#{idNumber})
    </insert>

    <select id="getAllStudent" resultType="java.util.Map" parameterType="java.lang.Integer">
        SELECT * FROM student limit #{page},#{limit};
    </select>

    <select id="getCount" resultType="Integer">
        SELECT COUNT(*) from student;
    </select>
</mapper>